# ClayWorks CMS Environment Configuration
# Copy this file to .env and update the values for production

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_DB=clayworks_strapi
POSTGRES_USER=strapi
POSTGRES_PASSWORD=strapi_password_change_me
DATABASE_SSL=false

# =============================================================================
# STRAPI CMS
# =============================================================================
STRAPI_PUBLIC_URL=http://localhost:1337

# IMPORTANT: Generate secure keys for production!
# Use: openssl rand -base64 32
APP_KEYS=key1_change_me,key2_change_me,key3_change_me,key4_change_me
ADMIN_JWT_SECRET=admin-jwt-secret-change-me
API_TOKEN_SALT=api-token-salt-change-me
TRANSFER_TOKEN_SALT=transfer-token-salt-change-me
JWT_SECRET=jwt-secret-change-me

# Strapi API Token (create in Strapi admin panel)
STRAPI_API_TOKEN=

# =============================================================================
# GO MIDDLEWARE
# =============================================================================
# API Key for Next.js to access middleware
API_KEY=your-secure-api-key-change-me

# Cache settings
CACHE_TTL=5m

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=

# =============================================================================
# CORS & URLs
# =============================================================================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# ANALYTICS (Future use)
# =============================================================================
GOOGLE_ANALYTICS_ID=
