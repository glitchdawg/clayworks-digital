# ClayWorks Production Environment Configuration
# Copy to .env.production and fill in all values

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Your Hostinger subdomain (e.g., app.example.com)
DOMAIN=app.yourdomain.com

# Email for Let's Encrypt SSL certificate notifications
ACME_EMAIL=admin@yourdomain.com

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_DB=clayworks_strapi
POSTGRES_USER=strapi
# Generate: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# =============================================================================
# REDIS CACHE
# =============================================================================
# Generate: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# =============================================================================
# STRAPI CMS SECRETS
# Generate each with: openssl rand -base64 32
# =============================================================================
APP_KEYS=key1,key2,key3,key4
ADMIN_JWT_SECRET=CHANGE_ME_ADMIN_JWT
API_TOKEN_SALT=CHANGE_ME_API_TOKEN_SALT
TRANSFER_TOKEN_SALT=CHANGE_ME_TRANSFER_TOKEN_SALT
JWT_SECRET=CHANGE_ME_JWT_SECRET

# Strapi API Token (create in Strapi Admin Panel after first deploy)
STRAPI_API_TOKEN=

# =============================================================================
# MIDDLEWARE API
# =============================================================================
# Generate: openssl rand -base64 32
API_KEY=CHANGE_ME_API_KEY

# Cache settings
CACHE_TTL=5m

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# =============================================================================
# TRAEFIK DASHBOARD
# =============================================================================
# Generate with: htpasswd -nb admin yourpassword
# Format: username:password_hash
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$xyz123$$hashedpassword

# =============================================================================
# CROWDSEC WAF
# =============================================================================
# Generate bouncer key after first deploy:
# docker exec clayworks-crowdsec cscli bouncers add traefik-bouncer
CROWDSEC_BOUNCER_KEY=CHANGE_ME_AFTER_DEPLOY

# =============================================================================
# SYSTEM
# =============================================================================
GID=1000

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
GOOGLE_ANALYTICS_ID=
