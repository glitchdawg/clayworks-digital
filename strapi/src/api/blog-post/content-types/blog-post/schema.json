{
    "kind": "collectionType",
    "collectionName": "blog_posts",
    "info": {
        "singularName": "blog-post",
        "pluralName": "blog-posts",
        "displayName": "Blog Post",
        "description": "Blog articles and news"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "excerpt": {
            "type": "text"
        },
        "content": {
            "type": "richtext"
        },
        "featuredImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ]
        },
        "author": {
            "type": "string"
        },
        "publishedAt": {
            "type": "datetime"
        },
        "categories": {
            "type": "json"
        },
        "tags": {
            "type": "json"
        },
        "featured": {
            "type": "boolean",
            "default": false
        }
    }
}