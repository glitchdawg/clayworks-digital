{
    "kind": "collectionType",
    "collectionName": "hero_sections",
    "info": {
        "singularName": "hero-section",
        "pluralName": "hero-sections",
        "displayName": "Hero Section",
        "description": "Hero banners for various pages"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "subtitle": {
            "type": "string"
        },
        "badge": {
            "type": "string"
        },
        "description": {
            "type": "text"
        },
        "videoUrl": {
            "type": "string"
        },
        "backgroundImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "ctaText": {
            "type": "string"
        },
        "ctaLink": {
            "type": "string"
        },
        "page": {
            "type": "string",
            "required": true,
            "default": "home"
        },
        "layout": {
            "type": "enumeration",
            "enum": [
                "video",
                "image-left",
                "image-right",
                "centered"
            ],
            "default": "video"
        },
        "showForm": {
            "type": "boolean",
            "default": false
        },
        "order": {
            "type": "integer",
            "default": 0
        }
    }
}