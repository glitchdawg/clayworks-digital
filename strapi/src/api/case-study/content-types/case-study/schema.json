{
    "kind": "collectionType",
    "collectionName": "case_studies",
    "info": {
        "singularName": "case-study",
        "pluralName": "case-studies",
        "displayName": "Case Study",
        "description": "Customer success stories"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "companyName": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "companyName",
            "required": true
        },
        "description": {
            "type": "text",
            "required": true
        },
        "fullContent": {
            "type": "richtext"
        },
        "linkText": {
            "type": "string",
            "default": "Read Case Study"
        },
        "featuredImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ]
        },
        "industryTags": {
            "type": "json"
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "order": {
            "type": "integer",
            "default": 0
        }
    }
}